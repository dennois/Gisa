@inject Microsoft.Extensions.Configuration.IConfiguration Configuration

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>GISA - Gestão Integral da Saúde do Associado</title>
    <link rel="icon" type="image/png" href="~/images/favicon.png" sizes="180x180" asp-append-version="true" />
    <link rel="stylesheet" href="~/libs/bootstrap/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/icomoon/style.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/main.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/toastr.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/jerosoler/Drawflow/dist/drawflow.min.css">
</head>
<body>
    <div id="app" v-cloak>
        <main role="main">
            <router-view></router-view>
            @RenderBody()
        </main>
    </div>

    <script>
        var webApiUrl = "@Configuration["GISA:WebApi"]";
    </script>

    <script src="~/libs/jquery-3.5.1.min.js"></script>
    <script src="~/libs/bootstrap/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/promise-polyfill@8/dist/polyfill.min.js"></script>
    <script src="~/js/polyfill.js"></script>
    <script src="~/libs/vue.js"></script>
    <script src="~/libs/http-vue-loader/1.4.2/httpVueLoader.js"></script>
    <script src="~/libs/vue-router.min.js"></script>
    <script src="~/libs/v-money-0.8.1.js"></script>
    <script src="~/libs/vue-the-mask/0.11.1/vue-the-mask.min.js"></script>
    <script src="~/libs/moment/2.26.0/moment.min.js"></script>
    <script src="~/js/services.js" asp-append-version="true"></script>
    <script src="~/js/main.js" asp-append-version="true"></script>
    <script src="~/js/toastr.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/gh/jerosoler/Drawflow/dist/drawflow.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
